<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/app_bar"
                layout="@layout/app_bar" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_marginTop="5dp"
                            android:text="User Name"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            app:typeface="roboto_bold_italic" />

                        <ImageView
                            android:id="@+id/ivProfilepic"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:background="@color/colorPrimaryLight"
                            android:padding="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/blankface" />

                        <RatingBar
                            android:id="@+id/rbUserRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.50" />

                        <com.devspark.robototextview.widget.RobotoTextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Current Balance: 100 tk"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/app_theme_color2"
                            app:typeface="roboto_thin_italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Email"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />


                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvEmail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="sifat.oshan@gmail.com"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Mobile Number"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />


                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="017xxxxxxxx"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Birthday"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />


                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvBirthday"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="14/01/1997"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Gender"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />


                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvGender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Male"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Address"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />


                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Kalabagan,Dhaka"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Profession"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />

                            <com.devspark.robototextview.widget.RobotoTextView
                                android:id="@+id/tvProfession"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Student"
                                android:textAlignment="center"
                                android:textColor="@color/blue_grey_900"
                                app:typeface="roboto_thin_italic" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

        <!--android.support.design.widget.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nvheader"
            app:itemIconTint="#333"
            app:itemTextColor="#333"
            app:menu="@menu/default_menu_items" />

    </android.support.v4.widget.DrawerLayout-->
</LinearLayout>



